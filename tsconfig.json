{
    "compilerOptions": {
        "target": "ESNext",
        "lib": [
            "ESNext"
        ],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "rootDir": "./src",
        "baseUrl": "./",
        "outDir": "./dist",
        "removeComments": true,
        "noEmitOnError": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "paths": {
            "#mirai/client": ["./src/structures/client/Mirai.ts"],
            "#mirai/types": ["./src/structures/utils/types/index.ts"],
            "#mirai/classes": ["./src/structures/utils/classes/index.ts"],
            "#mirai/middlwares": ["./src/middlewares/index.ts"],
            "#mirai/errors": ["./src/structures/utils/Errors.ts"],
            "#mirai/decorators": ["./src/structures/utils/Decorators.ts"],
            "#mirai/index": ["./src/index.ts"],
            "#mirai/data/*": ["./src/structures/utils/data/*"],
            "#mirai/utils/*": ["./src/structures/utils/*"],
        }
    },
    "include": ["./src/**/*"],
    "exclude": [
        "node_modules",
        "dist"
    ]
}